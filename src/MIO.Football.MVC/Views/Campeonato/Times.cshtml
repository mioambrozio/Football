@model MIO.Football.Application.ViewModel.Team.TeamCompleteViewModel
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Times</h1>
</div>
<div class="row">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Times</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Clube</th>
                            <th>Nome Curto</th>
                            <th>Fundado em</th>
                            <th>Cores do Time</th>
                            <th>Telefone</th>
                            <th>Email</th>
                            <th>Endereço</th>
                            <th>Localização</th>
                            <th>Site</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th></th>
                            <th>Clube</th>
                            <th>Nome Curto</th>
                            <th>Fundado em</th>
                            <th>Cores do Time</th>
                            <th>Telefone</th>
                            <th>Email</th>
                            <th>Endereço</th>
                            <th>Localização</th>
                            <th>Site</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model.teams)
                        {
                            <tr>
                                <th><img class="img-time-18" src="@item.crestUrl" /></th>
                                <th>@item.name</th>
                                <th>@item.shortName</th>
                                <th>@item.founded</th>
                                <th>@item.clubColors</th>
                                <th>@item.phone</th>
                                <th>@item.email</th>
                                <th>@item.address</th>
                                <th>@item.venue</th>
                                <th>@item.website</th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Styles{
    <link href="~/lib/datatables/dataTables.bootstrap4.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/lib/datatables/jquery.dataTables.js"></script>
    <script src="~/lib/datatables/dataTables.bootstrap4.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });
    </script>
}